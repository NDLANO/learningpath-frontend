{
  "name": "learningpath-frontend",
  "version": "0.1.19",
  "description": "NDLA Learning Path Frontend",
  "scripts": {
    "pretest": "yarn run lint",
    "clean": "rimraf ./htdocs/assets/*",
    "test": "NODE_ENV=unittest jest",
    "tdd": "NODE_ENV=unittest jest --watch",
    "copy-svg-polyfill": "mkdir -p htdocs/assets && cp node_modules/svg4everybody/dist/svg4everybody.min.js htdocs/assets/",
    "prebuild": "yarn run clean && yarn run copy-svg-polyfill",
    "build": "NODE_ENV=production webpack --config ./webpack.config.prod.js --bail",
    "start": "NODE_ENV=development DISABLE_SSR=true nodemon --watch server server",
    "start-with-ssr": "NODE_ENV=development nodemon --watch server server",
    "start-prod": "NODE_ENV=production node server",
    "lint": "yarn lint-css && yarn lint-es && yarn lint-prettier",
    "lint-es": "eslint src server",
    "lint-css": "stylelint style/**/*.css",
    "lint-prettier": "node prettier.js lint",
    "prettier": "node prettier.js write"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "./src/common/__tests__/enzymeSetup.js"
    ],
    "moduleDirectories": [
      "src",
      "server",
      "node_modules"
    ],
    "testRegex": "/__tests__/.*-test.(js|jsx)$",
    "globals": {
      "__CLIENT__": false,
      "__SERVER__": true,
      "__DISABLE_SSR__": true
    }
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chalk": "2.3.0",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint-config-ndla": "0.3.4",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^1.1.5",
    "flux-standard-action": "1.2.0",
    "jest": "^21.2.1",
    "json-loader": "0.5.7",
    "nock": "9.0.22",
    "nodemon": "1.12.1",
    "postcss-cssnext": "3.0.2",
    "postcss-easy-import": "3.0.0",
    "postcss-focus": "3.0.0",
    "postcss-loader": "2.0.8",
    "postcss-nested": "2.1.2",
    "prettier": "1.8.2",
    "raf": "^3.4.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.0.0",
    "redux-mock-store": "^1.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.0.1",
    "style-loader": "^0.19.0",
    "stylelint": "8.2.0",
    "stylelint-config-standard": "17.0.0",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0",
    "webpack-manifest-plugin": "1.3.2"
  },
  "dependencies": {
    "auth0-js": "^8.10.1",
